@page "{id:int}"
@model GroupStudyV3.Pages.StudyGroups.EditModel

@{
    ViewData["Title"] = "Edit Group Members";
}

<h1>@ViewData["Title"]</h1>

<form method="post" class="mb-4">
    <input type="hidden" asp-for="StudyGroupId" />

    <div class="mb-3">
        <label asp-for="GroupName" class="form-label">Group Name</label>
        <input asp-for="GroupName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Members</label>
        <div class="list-group">
            @foreach (var s in Model.AllStudents)
            {
                <label class="list-group-item">
                    <input type="checkbox"
                           name="SelectedStudentIds"
                           value="@s.StudentId"
                    @(Model.SelectedStudentIds.Contains(s.StudentId) ? "checked" : "") />
                    @s.FirstName @s.LastName (@s.ClassStanding, @s.Gender)
                </label>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Members</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
