@page
@model GroupStudyV3.Pages.Assignments.CreateModel

@{
    ViewData["Title"] = "Create Assignment";
}

<h1>@ViewData["Title"]</h1>

<form method="post" class="mb-3">
    <div class="form-group mb-2">
        <label asp-for="Assignment.CourseId" class="control-label">Course</label>
        <select asp-for="Assignment.CourseId" class="form-control" asp-items="Model.Courses">
            <option value="">-- select a course --</option>
        </select>
        <span asp-validation-for="Assignment.CourseId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Assignment.Title" class="control-label">Title</label>
        <input asp-for="Assignment.Title" class="form-control" />
        <span asp-validation-for="Assignment.Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Assignment.Type" class="control-label">Type</label>
        <select asp-for="Assignment.Type" class="form-control" asp-items="Model.AssignmentTypes">
            <option value="">-- select type --</option>
        </select>
        <span asp-validation-for="Assignment.Type" class="text-danger"></span>
    </div>


    <div class="form-group mb-2">
        <label asp-for="Assignment.DueDate" class="control-label">Due Date</label>
        <input asp-for="Assignment.DueDate" class="form-control" type="date" />
        <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Assignment.Description" class="control-label">Description</label>
        <textarea asp-for="Assignment.Description" class="form-control"></textarea>
        <span asp-validation-for="Assignment.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




